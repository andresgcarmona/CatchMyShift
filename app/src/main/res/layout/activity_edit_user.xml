<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="catchmyshift.catchmyshift.activity.EditUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layoutimageProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userImageProfile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/fondologinpest"/>

                </LinearLayout>

            <android.support.design.widget.FloatingActionButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:tint="@color/colorWhiteText"
                android:src="@drawable/addvd"
                android:clickable="true"
                app:fabSize="mini"
                app:layout_anchor="@id/userImageProfile"
                app:layout_anchorGravity="bottom|right|end"/>

        </android.support.design.widget.CoordinatorLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:inputType="textWebEmailAddress"
                android:textSize="17sp"
                android:hint="@string/title_name"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/colorIconsForms">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:inputType="textPassword"
                android:textSize="17sp"
                android:hint="@string/title_login_password"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/colorIconsForms">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:inputType="textPassword"
                android:textSize="17sp"
                android:hint="@string/title_confirm_password"/>

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom">
             <RelativeLayout
                 android:layout_width="0px"
                 android:layout_height="wrap_content"
                 android:layout_weight="1">

                 <Button
                     android:id="@+id/confirmEditProfile"
                     android:layout_width="match_parent"
                     android:layout_height="55dp"
                     android:drawableLeft="@drawable/okvd"
                     android:drawableTint="@color/colorWhiteText"
                     android:paddingLeft="16dp"
                     android:foreground="?android:attr/selectableItemBackground"
                     android:background="@color/colorAccent"
                     android:clickable="true"
                     android:layout_alignParentLeft="true" />
             </RelativeLayout>

            <RelativeLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/cancelEditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:drawableRight="@drawable/cancelvd"
                    android:drawableTint="@color/colorWhiteText"
                    android:paddingRight="16dp"
                    android:layout_alignParentRight="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:background="@color/colorAccentBtn"
                    android:clickable="true" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
