<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="catchmyshift.catchmyshift.activity.EditUserActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/title_personal_info"
                android:layout_margin="16dp"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/title_avatar_user"
                android:layout_marginTop="16dp"
                android:textSize="17dp"
                android:layout_marginBottom="20dp"
                />

            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userImageProfile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/fondologinpest"/>

                <ProgressBar
                    android:id="@+id/progressImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="30dp"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    android:background="@color/colorTransparent"
                    />


                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/cameraUserProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:tint="@color/colorWhiteText"
                    android:src="@drawable/addphotovd"
                    android:clickable="true"
                    app:layout_anchor="@id/userImageProfile"
                    app:layout_anchorGravity="bottom|right|end"
                    app:fabSize="mini"/>


            </android.support.design.widget.CoordinatorLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/title_logo_especificaciones"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:textSize="12sp"
                android:paddingBottom="20dp"
                />


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/id_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="8dp"
                    android:inputType="textWebEmailAddress"
                    android:background="@drawable/rounded_inputtxt"
                    android:layout_margin="8dp"
                    android:textSize="17sp"
                    android:hint="@string/title_name"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/id_segundonombre"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="8dp"
                    android:inputType="textWebEmailAddress"
                    android:background="@drawable/rounded_inputtxt"
                    android:layout_margin="8dp"
                    android:textSize="17sp"
                    android:hint="@string/title_middle_name"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/id_apellidos"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="8dp"
                    android:inputType="textWebEmailAddress"
                    android:background="@drawable/rounded_inputtxt"
                    android:layout_margin="8dp"
                    android:textSize="17sp"
                    android:hint="@string/title_last_name"/>

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/idfecha_nac"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="left|center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="@drawable/rounded_inputtxt"
                android:drawableRight="@drawable/datecompanyvd"
                android:layout_margin="8dp"
                android:textSize="17sp"
                android:hint="@string/title_birth_date"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/id_user_email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="8dp"
                    android:inputType="textWebEmailAddress"
                    android:background="@drawable/rounded_inputtxt"
                    android:layout_margin="8dp"
                    android:textSize="17sp"
                    android:hint="@string/title_login_email"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/id_user_about"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="8dp"
                    android:inputType="textWebEmailAddress"
                    android:background="@drawable/rounded_inputtxt"
                    android:layout_margin="8dp"
                    android:textSize="17sp"
                    android:hint="@string/title_user_about"/>

            </android.support.design.widget.TextInputLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView1"
                android:layout_marginTop="20dp"
                android:background="@color/colorIconsForms" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/title_info_location"
                android:layout_margin="16dp"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/title_country"
                android:layout_marginTop="16dp"
                android:textSize="17dp"
                />

            <Spinner
                android:id="@+id/sp_pais"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/rounded_inputtxt"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/title_estado"
                android:layout_marginTop="16dp"
                android:textSize="17dp"
                />

            <Spinner
                android:id="@+id/sp_estado"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/rounded_inputtxt"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/title_municipio"
                android:layout_marginTop="16dp"
                android:textSize="17dp"
                />

            <Spinner
                android:id="@+id/sp_municipio"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/rounded_inputtxt"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/colorIconsForms">

                <EditText
                    android:id="@+id/id_codigopostal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/rounded_inputtxt"
                    android:textSize="17sp"
                    android:hint="@string/title_codigo_postal"/>

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/title_user_languages"
                android:layout_marginTop="16dp"
                android:textSize="17dp"
                />

            <Spinner
                android:id="@+id/sp_idioma"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/rounded_inputtxt"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="32dp"
                android:orientation="horizontal"
                android:gravity="bottom">
                <RelativeLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/confirmEditProfile"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:drawableLeft="@drawable/okvd"
                        android:drawableTint="@color/colorWhiteText"
                        android:paddingLeft="16dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:background="@color/colorAccent"
                        android:clickable="true"
                        android:layout_alignParentLeft="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/cancelEditProfile"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:drawableRight="@drawable/cancelvd"
                        android:drawableTint="@color/colorGrayText"
                        android:paddingRight="16dp"
                        android:layout_alignParentRight="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:background="@color/colorAccentBtn"
                        android:clickable="true" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
