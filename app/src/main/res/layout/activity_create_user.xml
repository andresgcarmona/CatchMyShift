<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="catchmyshift.catchmyshift.CreateUserActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/fondologinpest"
        >
        <FrameLayout
            android:layout_width="270dp"
            android:layout_height="250dp"
            android:background="@drawable/fondologinpest"
            android:layout_gravity="center"
            ></FrameLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textAlignment="center"
            android:textSize="15sp"
            android:inputType="textWebEmailAddress"
            android:hint="@string/title_login_email"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textAlignment="center"
            android:textSize="15sp"
            android:inputType="textWebPassword"
            android:hint="@string/title_login_password"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textAlignment="center"
            android:textSize="15sp"
            android:inputType="textWebPassword"
            android:hint="@string/title_confirm_password"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bgnd_btn_accent"
            android:textColor="@color/colorWhiteText"
            android:text="@string/title_sign_up"
            />

    </LinearLayout>
</LinearLayout>
