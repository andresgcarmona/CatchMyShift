<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="catchmyshift.catchmyshift.activity.CreateUserActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/fondologinpest">

                <FrameLayout
                    android:layout_width="270dp"
                    android:layout_height="250dp"
                    android:background="@drawable/fondologinpest"
                    android:layout_gravity="center">

                </FrameLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="8dp"
                    android:inputType="textWebEmailAddress"
                    android:background="@drawable/rounded_inputtxt"
                    android:layout_margin="8dp"
                    android:textSize="17sp"
                    android:hint="@string/title_name"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="8dp"
                    android:inputType="textWebEmailAddress"
                    android:background="@drawable/rounded_inputtxt"
                    android:layout_margin="8dp"
                    android:textSize="17sp"
                    android:hint="@string/title_login_email" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:paddingLeft="8dp"
                    android:background="@drawable/rounded_inputtxt"
                    android:inputType="textPassword"
                    android:textSize="17sp"
                    android:hint="@string/title_login_password"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:paddingLeft="8dp"
                    android:background="@drawable/rounded_inputtxt"
                    android:inputType="textPassword"
                    android:textSize="17sp"
                    android:hint="@string/title_confirm_password"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:textSize="15sp"
                    android:text="@string/title_terms"
                    />

            </LinearLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@color/colorAccentBtn"
                android:clickable="true"
                android:textColor="@color/colorWhiteText"
                android:text="@string/title_sign_up"
                />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
