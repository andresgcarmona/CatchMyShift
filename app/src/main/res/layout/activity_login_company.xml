<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logincompanybck"
    tools:context="catchmyshift.catchmyshift.activity.LoginActivityCompany"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/title_sign_in"
                android:textColor="@color/colorWhiteText"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_createAccoutn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/title_CreateAccount"
                android:textColor="@color/colorWhiteText"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_linkedIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/title_Linkedin"
                android:textColor="@color/colorWhiteText"
                android:textSize="13sp"
                android:textStyle="bold" />
        </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="332dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/logincompany"

        android:gravity="center|bottom"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparent">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edittext_email_comp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_inputtxt"
                android:hint="@string/title_login_email"
                android:inputType="textWebEmailAddress"
                android:paddingLeft="8dp"
                android:textSize="17sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparent"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/colorIconsForms">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edittext_password_comp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_inputtxt"
                android:hint="@string/title_login_password"
                android:inputType="textPassword"
                android:paddingLeft="8dp"
                android:textSize="17sp" />

        </android.support.design.widget.TextInputLayout>

        <Switch
            android:id="@+id/idRemember_me_comp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp"
            android:background="@color/colorTransparent"
            android:textColor="@color/colorGrayText"
            android:text="@string/title_remember_me" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparent"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="16dp"
            android:gravity="right"
            android:text="@string/title_ForgotPassword"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/button_login_comp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorAccent"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="@string/title_sign_in"
            android:textColor="@color/colorWhiteText"
            android:textSize="17sp" />
    </LinearLayout>
</LinearLayout>



</LinearLayout>
