<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="catchmyshift.catchmyshift.activity.EducationActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/title_educacion"
                android:layout_margin="16dp"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/title_nivel_estudio"
                android:layout_marginTop="16dp"
                android:textSize="17dp"
                />

            <Spinner
                android:id="@+id/sp_nivelestudio"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/rounded_inputtxt"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/title_estado_nivel_estudio"
                android:layout_marginTop="16dp"
                android:textSize="17dp"
                />

            <Spinner
                android:id="@+id/sp_nivelestudio_status"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/rounded_inputtxt"
                />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/id_institucion"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="8dp"
                    android:inputType="text"
                    android:background="@drawable/rounded_inputtxt"
                    android:layout_margin="8dp"
                    android:textSize="17sp"
                    android:hint="@string/title_institucion"/>

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/idanio_inicial"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="left|center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="@drawable/rounded_inputtxt"
                android:drawableRight="@drawable/datecompanyvd"
                android:layout_margin="8dp"
                android:textSize="17sp"
                android:hint="@string/title_start_year"/>

            <TextView
                android:id="@+id/idanio_final"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="left|center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="@drawable/rounded_inputtxt"
                android:drawableRight="@drawable/datecompanyvd"
                android:layout_margin="8dp"
                android:textSize="17sp"
                android:hint="@string/title_finish_year"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="32dp"
                android:orientation="horizontal"
                android:gravity="bottom">
                <RelativeLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/confirmEditProfile"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:drawableLeft="@drawable/okvd"
                        android:drawableTint="@color/colorWhiteText"
                        android:paddingLeft="16dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:background="@color/colorAccent"
                        android:clickable="true"
                        android:layout_alignParentLeft="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/cancelEditProfile"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:drawableRight="@drawable/cancelvd"
                        android:drawableTint="@color/colorGrayText"
                        android:paddingRight="16dp"
                        android:layout_alignParentRight="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:background="@color/colorAccentBtn"
                        android:clickable="true" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/idprogressEducation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="150dp"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/colorPrimary"
        android:background="@color/colorTransparent"
        style="@style/SpinKitView.Large.ThreeBounce"
        android:visibility="invisible"
        />

</android.support.v7.widget.CardView>
